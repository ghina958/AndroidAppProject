<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeskenlerActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ETname"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Name:"
                android:inputType="textPersonName"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.158"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETid"
                app:layout_constraintVertical_bias="0.014" />

            <EditText
                android:id="@+id/ETtelefon"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Telefon:"
                android:inputType="number"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.174"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETname"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/ETemail"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:hint="Email:"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.169"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETtelefon"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/ETkatno"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:hint="Kat No:"
                android:inputType="number"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.174"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ETkatno"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/ETkapıno"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:hint="Kapı No:"
                android:inputType="number"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.174"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETkatno"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/ETid"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ID:"
                android:inputType="number"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.023" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update"
                android:layout_width="99dp"
                android:layout_height="120dp"
                android:text="Güncelle" />

            <Button
                android:id="@+id/delete"
                android:layout_width="99dp"
                android:layout_height="120dp"
                android:text="Sil" />

            <Button
                android:id="@+id/add"
                android:layout_width="99dp"
                android:layout_height="120dp"
                android:text="Ekle" />

            <Button
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:text="göstermek" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>